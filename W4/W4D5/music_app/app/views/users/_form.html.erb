<form action="<%= users_url %>" method="post" accept-charset="utf-8">
  <%= form_authenticity_token_input %>
  <table>
    <tr>
      <td><label for="user_name">Name</label></td>
      <td><input type="text" name="user[name]" value="<%= user.name %>" id="user_name"></td>
    </tr>
    <tr>
      <td><label for="user_username">Username</label></td>
      <td><input type="text" name="user[username]" value="<%= user.username %>" id="user_username"></td>
    </tr>
    <tr>
      <td><label for="user_email">Email</label></td>
      <td><input type="text" name="user[email]" value="<%= user.email %>" id="user_email"></td>
    </tr>
    <tr>
      <td><label for="user_password">Password</label></td>
      <td><input type="password" name="user[password]" value="" id="user_password"></td>
    </tr>
    <tr>
      <td><label for="user_password_confirmation">Password Confirmation</label></td>
      <td><input type="password" name="user[password_confirmation]" value="" id="user_password_confirmation"></td>
    </tr>
    <tr>
      <td><input type="submit" value="Sign Up!"></td>
    </tr>
  </table>
  
</form>