<form role="form">
  <div class="tile board-tile" id="new-board-tile">
    <h1 class="board-header" id="board-title"><input class="form-control" type="text" name="board[title]" value="<%= board.escape('title') %>" id="title" placeholder="Title" autofocus></h1>
    <textarea class="form-control"  name="board[description]" id="description" placeholder="A short description or whatever."><%= board.escape('description') %></textarea>
    <button id="update-board" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Update Board</button>
  </div>
</form>
